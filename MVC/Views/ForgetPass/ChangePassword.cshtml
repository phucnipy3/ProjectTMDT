
@{
    ViewBag.Title = "ChangePassword";
}

    <div class="container">
        <div class="row">
            <div class="col-6 mx-auto">
                @using (Html.BeginForm("ChangePassword", "ForgetPass", FormMethod.Post))
                {
                    <div class="form-group">
                        <label>UserId: </label>
                        <input name="userId" readonly value="@ViewBag.UserId" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Password: </label>
                        <input name="password" value="" class="form-control" type="password" />
                    </div>
                    <div class="form-group">
                        <label>Xác nhận password: </label>
                        <input name="rePassword" value="" class="form-control" type="password"/>
                    </div>
                    <div class="form-group">
                        <label>Nhập mã code được gửi tới email: </label>
                        <input name="code" value="" class="form-control" />
                    </div>
                    <button class="btn btn-primary float-right" type="submit">
                        Đổi mật khẩu
                    </button>
                }
            </div>
        </div>
    </div>

